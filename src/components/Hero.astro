---
import { siteConfig } from "../config";

// Choose your palette: "dark" | "blue" | "purple"
const palette = "dark";

const palettes = {
  dark: {
    background: "#0f172a", // dark navy
    text: "#ffffff",
    star: "#ffffff",
  },
  blue: {
    background: "linear-gradient(135deg, #1e3a8a, #3b82f6)",
    text: "#ffffff",
    star: "#e0f2fe",
  },
  purple: {
    background: "linear-gradient(135deg, #4f46e5, #9333ea)",
    text: "#ffffff",
    star: "#f9fafb",
  },
};
const theme = palettes[palette];
---

<div
  id="hero"
  class="relative isolate overflow-hidden py-24 md:h-screen flex flex-col justify-center"
  style={`--accent-color: ${siteConfig.accentColor}; background: ${theme.background}; color: ${theme.text}`}
>
  <!-- Animated Stars -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    {Array.from({ length: 50 }).map((_, i) => (
      <div
        class="star"
        style={`top:${Math.random() * 100}%; left:${Math.random() * 100}%; background:${theme.star}`}
      ></div>
    ))}
  </div>

  <!-- Hero content -->
  <div class="h-full mx-auto px-6 flex flex-col items-center justify-center text-center space-y-4">
  <h1
    class="font-bold tracking-tight text-white text-center leading-tight mb-2"
    style="font-size: clamp(2rem, 5vw, 3.5rem);"
  >
    {siteConfig.name}
  </h1>

    <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-300 font-medium tracking-wide">
      {siteConfig.title}
    </p>

    <!-- Socials -->
    <div class="flex gap-x-6 animate-fade-in animation-delay-600">
      {siteConfig.social?.email && (
        <a href={`mailto:${siteConfig.social.email}`} aria-label="Email" class="hover:text-[var(--accent-color)] transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2H5a2 2 0 0 1 -2 -2V7z" />
            <path d="M3 7l9 6l9 -6" />
          </svg>
        </a>
      )}
      {siteConfig.social?.linkedin && (
        <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="hover:text-[var(--accent-color)] transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M8 11v5" /><path d="M8 8v.01" /><path d="M12 16v-5" /><path d="M16 16v-3a2 2 0 1 0 -4 0" /><path d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z" />
          </svg>
        </a>
      )}
      {siteConfig.social?.github && (
        <a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="hover:text-[var(--accent-color)] transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
          </svg>
        </a>
      )}
    </div>
  </div>

  <!-- Scroll Down -->
  <div class="absolute bottom-8 left-0 right-0 flex justify-center animate-fade-in animation-delay-800">
  <div class="flex flex-col items-center text-white">
    <span class="text-sm mb-2">Scroll Down</span>
    <div class="w-6 h-10 border-2 border-white rounded-full flex justify-center">
      <div class="w-2 h-2 bg-white rounded-full animate-bounce mt-2"></div>
    </div>
  </div>
</div>

<style>
  .star {
    position: absolute;
    width: 2px;
    height: 2px;
    border-radius: 50%;
    opacity: 0.8;
    animation: twinkle 2s infinite alternate;
  }
  @keyframes twinkle {
    from { opacity: 0.2; transform: scale(1); }
    to { opacity: 1; transform: scale(1.5); }
  }
</style>
