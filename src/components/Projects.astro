---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-6 text-center">
      
      <!-- Section Heading -->
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900">
        Projects
      </h2>
      <div
        class="w-[75px] h-[5px] mt-3 mx-auto rounded-full"
        style={`background-color: ${siteConfig.accentColor}`}
      ></div>

      <!-- Projects Grid -->
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {siteConfig.projects.map((project) => (
          <div class="flex flex-col bg-white rounded-2xl shadow-md hover:shadow-lg transition p-6 sm:p-8 text-left group">
            
            <!-- Project Title -->
            <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-[var(--accent-color)] transition">
              {project.name}
            </h3>

            <!-- Description -->
            <p class="text-gray-600 text-base leading-relaxed flex-grow">
              {project.description}
            </p>

            <!-- Skills / Tags -->
            {project.skills && project.skills.length > 0 && (
              <div class="mt-4 flex flex-wrap gap-2">
                {project.skills.map((skill) => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 text-xs rounded-full">
                    #{skill}
                  </span>
                ))}
              </div>
            )}

            <!-- CTA -->
            {project.status === "done" && project.link ? (
              <a
                href={project.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block mt-6 px-4 py-2 bg-gray-900 text-white text-sm font-medium rounded-md hover:bg-gray-700 transition"
              >
                View Project â†’
              </a>
            ) : (
              <div class="mt-6 px-4 py-2 bg-gray-200 text-gray-500 text-sm font-medium rounded-md text-center cursor-not-allowed">
                In Progress
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
