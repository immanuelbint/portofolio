---
import { siteConfig } from "../config";
const hasCerts = siteConfig.certs && siteConfig.certs.length > 0;
---

{hasCerts && (
  <section id="certs" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
    <div class="max-w-4xl mx-auto">
      
      {/* Section Title */}
      <div class="inline-block mb-12 text-center w-full">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900">
          Certificates
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 mx-auto rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        />
      </div>

      {/* Certificate Cards */}
      <div class="space-y-8">
        {siteConfig.certs.map((cert) => (
          <div class="bg-white rounded-lg shadow-sm border border-gray-100 p-6 md:p-8 hover:shadow-md transition-shadow duration-300">
            
            <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-3">
              <div>
                <h3 class="text-lg sm:text-xl font-semibold text-gray-900">
                  {cert.name}
                </h3>
                <p
                  class="text-sm sm:text-base"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  {cert.issuer}
                </p>
              </div>
              <span class="text-xs sm:text-sm text-gray-500 mt-2 sm:mt-0">
                {cert.date}
              </span>
            </div>

            {cert.link && (
              <a
                href={cert.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block text-sm font-medium text-blue-600 hover:underline"
              >
                View Credential â†’
              </a>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>
)}
